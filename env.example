# PartKeeper Environment Variables
# Copy this file to .env.local and update the values

# Access code for authentication
# Users will need this code to access the app
NEXT_PUBLIC_ACCESS_CODE=partkeeper2024

# Songs backend: "file" for local JSON, "prisma" for database
NEXT_PUBLIC_SONGS_BACKEND=file
# If backend=file, path to songs.json (defaults to public/data/songs.json)
SONGS_FILE_PATH=

# Database Configuration (for Prisma backend)
# For Supabase, use the connection string from your Supabase project settings
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase Direct URL (optional, for advanced migrations)
# Only needed if you're using connection pooling and need direct access
# DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres?pgbouncer=true&connection_limit=1"

# Optional: Set to 'production' for production builds
# NODE_ENV=development
